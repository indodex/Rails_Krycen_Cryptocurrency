            li.crc-filter__item.crc-filter__item--x2 style=("width: 100%;")
              a.crc-button.crc-button--bordered.crc-button--emphasized data-x="MA" href="#"
                span.crc-button__text MA
              a.crc-button.crc-button--bordered data-x="EMA" href="#"
