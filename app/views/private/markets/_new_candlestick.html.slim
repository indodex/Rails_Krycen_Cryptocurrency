          li.crc-filter__item-right: ul#indicator_switch.list-style-none.crc-filter__items data-x='MACD'
            li.crc-filter__item style=("width: 100%;")
              a.crc-button.crc-button--bordered.crc-button--emphasized data-x="MACD" href="#"
                span.crc-button__text MACD
