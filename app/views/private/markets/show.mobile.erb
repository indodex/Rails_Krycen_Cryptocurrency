<!DOCTYPE html>
<html>
<head>
  <title>Crycen Exchange</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= stylesheet_link_tag     'mobile/common/common' %>
  <%= stylesheet_link_tag     'mobile/common/footer' %>
  <%= stylesheet_link_tag     'mobile/common/menu' %>
  <%= stylesheet_link_tag     'mobile/common/modal' %>
  <%= stylesheet_link_tag     '/font/css/font-awesome.min' %>
  <%= stylesheet_link_tag     'mobile/pages/market-page' %>

  <%= include_gon %>

  <%= csrf_meta_tags %>
</head>
<body>
<!-- Body BEGIN -->
<div class="landing_page"><!-- add class page-header-fixed, if you want to fix header -->

  <%= render 'shared/header' %>
  <div id="offset"></div>

  <input id="mobile_usd_amount" value="<%= @btc_price[:avg_24h] %>" placeholder="<%= @btc_price[:avg_24h] %>" maxlength="6" style="display: none">

  <div class="content font-color-light-gray body-class" data-url='mobile/pages/market-coffee'>
    <div class="container">
      <div class="row">
        <ul class="nav nav-pills nav-pills-color full-width-class" id="bitcoin-type-nav">
          <!--<%= link_to /^[a-z](!(\/btc))/.match(@market.name), market_path(@market), class: 'market-list-class li-selected' %>-->
          <% if @market.name == 'LTC/BTC' %>
            <li id="market-list-ltcbtc" class="bitcoin-type-li">
              <%= link_to 'LTC', '/markets/ltcbtc', class: 'market-list-class li-selected' %>
            </li>
          <% else %>
            <li id="market-list-ltcbtc" class="bitcoin-type-li">
              <%= link_to 'LTC', '/markets/ltcbtc', class: 'market-list-class' %>
            </li>
          <% end %>
          <% if @market.name == 'OCT/BTC' %>
            <li id="market-list-octbtc" class="bitcoin-type-li">
              <%= link_to 'OCT', '/markets/octbtc', class: 'market-list-class li-selected' %>
            </li>
          <% else %>
            <li id="market-list-octbtc" class="bitcoin-type-li">
              <%= link_to 'OCT', '/markets/octbtc', class: 'market-list-class' %>
            </li>
          <% end %>
          <% if @market.name == 'DOGE/BTC' %>
            <li id="market-list-dogebtc" class="bitcoin-type-li">
              <%= link_to 'DOGE', '/markets/dogebtc', class: 'market-list-class li-selected' %>
            </li>
          <% else %>
            <li id="market-list-dogebtc" class="bitcoin-type-li">
              <%= link_to 'DOGE', '/markets/dogebtc', class: 'market-list-class' %>
            </li>
          <% end %>
          <% if @market.name == 'DSH/BTC' %>
            <li id="market-list-dshbtc" class="bitcoin-type-li">
              <%= link_to 'DSH', '/markets/dshbtc', class: 'market-list-class li-selected' %>
            </li>
          <% else %>
            <li id="market-list-dshbtc" class="bitcoin-type-li">
              <%= link_to 'DSH', '/markets/dshbtc', class: 'market-list-class' %>
            </li>
          <% end %>
          <% if @market.name == 'RBY/BTC' %>
            <li id="market-list-rbybtc" class="bitcoin-type-li">
              <%= link_to 'RBY', '/markets/rbybtc', class: 'market-list-class li-selected' %>
            </li>
          <% else %>
            <li id="market-list-rbybtc" class="bitcoin-type-li">
              <%= link_to 'RBY', '/markets/rbybtc', class: 'market-list-class' %>
            </li>
          <% end %>
          <% if @market.name == 'GGC/BTC' %>
            <li id="market-list-ggcbtc" class="bitcoin-type-li">
              <%= link_to 'GGC', '/markets/ggcbtc', class: 'market-list-class li-selected' %>
            </li>
          <% else %>
            <li id="market-list-ggcbtc" class="bitcoin-type-li">
              <%= link_to 'GGC', '/markets/ggcbtc', class: 'market-list-class' %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="row">
        <div class="bitcoin-content">
          <div class="octacoin-market-types" id="octacoin-market-types">
            <span class="octacoin-market-types-name-left"><%= @market.name %> MARKET</span><span class="octacoin-market-types-name-right" id="octacoin-market-types-name-right"><i class="fa fa-angle-down"></i></span>
          </div>
          <div class="octacoin-market-options hide-class" id="octacoin-market-options" style="display:none;">
            <div class="octacoin-market-option">
              <span class="octacoin-market-option-left">Scrypt</span><span class="octacoin-market-option-right">octacoin scrypt</span>
            </div>
            <div class="octacoin-market-option">
              <span class="octacoin-market-option-left">Website</span><span class="octacoin-market-option-right">www.coinmarketcap.com</span>
            </div>
            <div class="octacoin-market-option">
              <span class="octacoin-market-option-left">Blockchain explore</span><span
            class="octacoin-market-option-right">1330</span>
            </div>
            <div class="octacoin-market-option">
              <span class="octacoin-market-option-left">Marketcap</span><span class="octacoin-market-option-right">15,239,000 BTC</span>
            </div>
          </div>
        </div>
      </div>
      <div class="bitcoin-content space-class"></div>
      <header>
        <div class="row">
          <div class="bitcoin-content">
            <div class="content-less-half-left">
              <div class="content-half">
                <div class="octacoin-market-price-type" id="octacoin-market-price-type">
                  <span class="octacoin-market-price-name-left" id="octacoin-market-price-name-left">7d.</span><span
                class="octacoin-market-price-name-right" id="octacoin-market-price-name-right"><i class="fa fa-angle-down"></i></span>
                </div>
                <div class="octacoin-market-price-options hide-class" id="octacoin-market-price-options">
                  <div class="octacoin-market-option">
                    <span class="octacoin-values">1d.</span>
                  </div>
                  <div class="octacoin-market-option">
                    <span class="octacoin-values">30d.</span>
                  </div>
                </div>
              </div>
              <div class="content-half content-half-left">
                <div class="description-class">Change</div>
                <div class="percent-class"><span class="change change-value"></span></div>
              </div>
            </div>
            <div class="content-less-half-right">
              <div class="description-class description-text-right">
                Volume: <span class="vol change-value"></span>
              </div>
              <div class="description-class description-text-right">
                High: <span class="high change-value"></span> Low: <span class="low change-value"></span>
              </div>
            </div>
          </div>
        </div>
      </header>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content" style="height: 400px; background-color: #000000; color: #cccccc; -webkit-filter: invert(100%);">
          <div style="width: 100%; border: solid 1px #222222; border-radius: 5px;">
            <%= render :partial => 'candlestick' %>
            <%= render :partial => 'range_switch' %>
            <%= render :partial => 'indicator_switch' %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="bitcoin-content" id="order_book">
          <div class="public-open-orders-resutl-div hide-class" id="public-open-orders-result-div">
            <ul class="nav nav-pills nav-pills-color border-class custom-ul">
              <li class="nav-description-type" style="margin: 0px; border-radius: 0px;">
                PUBLIC BID
              </li>
              <li class="nav-description-type" style="margin: 0px; border-radius: 0px;">
                PUBLIC ASK
              </li>
              <li class="nav-description-type li-selected" style="margin: 0px; border-radius: 0px;">
                PUBLIC LAST
              </li>
            </ul>
            <div class="bit-result-div" id="public-last">
              <div id="market_trades_wrapper">
                <table class="table table-striped table-hover" style="margin-bottom: 0px;">
                  <thead>
                  <tr>
                    <th class="text-align-left" style="width: 33.33%; text-align: left"><%= t('.time') %></th>
                    <th class="text-align-left" style="width: 33.33%; text-align: center"><%= t('.price') %></th>
                    <th class="text-align-left" style="text-align: right"><%= t('.volume') %></th>
                  </tr>
                  </thead>
                </table>
                <table class="table table-striped table-hover all-trades outercenter" style="margin: 0px;">
                  <tbody></tbody>
                </table>
              </div>
            </div>
            <div id="order_book_body">
              <div class="bit-result-div hide-class" id="public-ask">
                <table class="table table-striped table-hover" style="margin: 0px;">
                  <thead>
                      <tr>
                        <th class="text-align-left" style="width: 33.33%; text-align: left">Amount</th>
                        <th class="text-align-left" style="width: 33.33%; text-align: center">Volume</th>
                        <th class="text-align-right" style="text-align: right">ASK</th>
                      </tr>
                  </thead>
                </table>
                <table class="table table-striped table-hover asks outercenter" style="margin: 0px;">
                </table>
              </div>
              <div class="bit-result-div hide-class" id="public-bid">
                <table class="table table-striped table-hover" style="margin: 0px;">
                  <thead>
                      <tr>
                        <th class="text-align-left" style="width: 33.33%; text-align: left">Amount</th>
                        <th class="text-align-left" style="width: 33.33%; text-align: center">Volume</th>
                        <th class="text-align-right" style="text-align: right">BID</th>
                      </tr>
                  </thead>
                </table>
                <table class="table table-striped table-hover bids outercenter" style="margin: 0px;">
                </table>
              </div>
            </div>
          </div>
          <div class="public-open-orders" id="public-open-orders">
            <span class="octacoin-market-types-name-left">PUBLIC OPEN & LAST ORDERS</span><span
          class="octacoin-market-types-name-right" id="public-open-orders-right"><i class="fa fa-angle-down"></i></span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <% if current_user %>

      <div id="ticker">
      <div class="row">
        <div class="bitcoin-content">
          <div class="public-order">
            <div class="content-half">
              <div class="public-order-top order-result-align-center" id="mobile-bid-div">
                <div class="public-order-top-left-center font-size-12">BTC</div>
                <div class="public-order-top-right-center font-size-20"><span id="mobile_bidSelector"></span></div>
                <div class="float-left-class font-size-10"><span id="mobile_bid_smaller"></span></div>
              </div>
              <div class="public-order-bottom order-result-align-center">
                <i class="fa fa-question-circle font-size-10"> <span id="mobile_bidUSD"></span> USD</i>
              </div>
            </div>
            <div class="content-vertical-space "></div>
            <div class="content-half">
              <div class="public-order-top order-result-align-center" id="mobile-ask-div">
                <div class="public-order-top-left-center font-size-12">BTC</div>
                <div class="public-order-top-right-center font-size-20"><span id="mobile_askSelector"></span></div>
                <div class="float-left-class font-size-10"><span id="mobile_ask_smaller"></span></div>
              </div>
              <div class="public-order-bottom order-result-align-center">
                <i class="fa fa-question-circle font-size-10"> <span id="mobile_askUSD"></span> USD</i>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content float-left-class">
          <%= render :partial => 'ask_entry', locals: {market: @market, order: @order_ask} %>
          <div class="content-vertical-space-height-20"></div>
          <%= render :partial => 'bid_entry', locals: {market: @market, order: @order_bid} %>
        </div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content">
          <div class="funds-div border-round-class border-class">
            <div class="funds-title">MY FUNDS</div>
            <div class="funds-body">
              <div class="funds-left-body">
                <div class="funds-div-type">
                  <span><%= params["ask"].upcase %></span>
                </div>
                <div class="space-class"></div>
                <div class="funds-div-detail">
                  <div class="funds-div-detail-div">
                    <input type="hidden" id="ask_deposit_address" value="<%= @ask_deposit.address if !@ask_deposit.nil? %>">
                    <i class="fa fa-plus-square fa-much-bigger " onclick="opendeposit_dialog('<%= params["ask"].upcase %>', '<%= @ask_currency.key.pluralize %>', 'ask');"></i>
                    <span class="font-size-15 funds-div-detail-value"><span><%= sprintf('%.4f',@accounts.where(:currency => @ask_currency.id).first.balance) %></span></span>
                    <i class="fa fa-minus-square fa-much-bigger" onclick="openwithdraw_dialog('<%= params["ask"].upcase %>', '<%= @ask_currency.id %>');"></i>
                  </div>
                </div>
              </div>
              <div class="funds-right-body">
                <div class="funds-div-type"><%= params["bid"].upcase %></div>
                <div class="space-class"></div>
                <div class="funds-div-detail">
                  <div class="funds-div-detail-div">
                    <input type="hidden" id="bid_deposit_address" value="<%= @bid_deposit.address if !@bid_deposit.nil? %>">
                    <i class="fa fa-plus-square fa-much-bigger" onclick="opendeposit_dialog('<%= params["bid"].upcase %>', '<%= @bid_currency.key.pluralize %>', 'bid');"></i>
                    <span class="font-size-15 funds-div-detail-value"><span><%= sprintf('%.4f',@accounts.where(:currency => @bid_currency.id).first.balance) %></span></span>
                    <i class="fa fa-minus-square fa-much-bigger" onclick="openwithdraw_dialog('<%= params["bid"].upcase %>', '<%= @bid_currency.id %>');"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content space-class"></div>
      </div>
      <div class="row">
        <div class="bitcoin-content">
          <div class="open-last-div" id="my_orders">
            <ul class="nav nav-pills nav-pills-color open-last-ul">
              <li class="open-li li-selected">MY OPEN</li>
              <li class="open-li">MY LAST</li>
            </ul>
            <div class="full-width-class custom-border">
              <table class="table table-striped table-hover outercenter " style="margin: 0px;">
                <thead>
                <tr>
                  <th>Amount</th>
                  <th>Volume</th>
                  <th>BID</th>
                </tr>
                </thead>
              </table>
              <table class="table table-striped table-hover outercenter">
                <tbody>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="container space-class"></div>
      </div>
      <div class="row">
        <div class="container space-class"></div>
      </div>
      <% else %>
        <!-- BEGIN LOGIN BOX -->
        <div class="row login-section margin-bottom-30">
          <div class="text-center padding-top-15">
            <h4>Log in to use crycen services</h4>
          </div>
          <div class="padding-top-15 text-center">
            <a href="<%= root_path %>#signin" class="btn btn-signin" id="login-btn">
              <i class="fa fa-sign-in"></i> SIGN IN
            </a>
            <span>OR</span>
            <a href="<%= root_path %>#signup" class="btn btn-signup" id="register-btn">
              <i class="fa fa-sign-out"></i> SIGN UP
            </a>
          </div>
        </div>
        <!-- END LOGIN BOX -->

      <% end %>
    </div>

  </div>

  <%= render 'shared/footer' %>
  <% if current_user %>
  <!-- BEGIN DEPOSIT DIALOG -->
  <div class="modal fade in hide" id="deposit_dialog" role="dialog" style="display: block;">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i
    class="fa fa-close"></i></span></button>

    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-body">
          <div class="modal-mark">
            <div class="modal-mark-outer-border">
              <i class="fa fa-plus"></i>
            </div>
          </div>
          <div>
            <div>
              <label class="main-title">BTC DEPOSIT</label>
            </div>
            <div>
              <label class="sub-title">
                To make a deposit please copy and paste the address below into your wallet, enter
                the amount you want to deposit, then simply click confirm, then send and your deposit will appear
                below
              </label>
            </div>
            <div class="custom-form1">
              <form class="form-horizontal">
                <div class="form-group">
                  <div class="col-sm-12">
                    <input type="text" class="form-control" id="code"
                           value="16wLyW7up7nNm4r1ZghHNb33ip8X6CdeAy">
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-xs-12">
                    <button type="button" class="btn btn-primary btn-block btn-newaddr"><i class="fa fa-undo"></i>New
                      Address
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <!-- END DEPOSIT DIALOG -->

  <!-- BEGIN WITHDRAW DIALOG -->
  <div class="modal fade in hide" id="withdraw_dialog" role="dialog" style="display: block;">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i
    class="fa fa-close"></i></span></button>

    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-body">
          <div class="modal-mark">
            <div class="modal-mark-outer-border">
              <i class="fa fa-minus"></i>
            </div>
          </div>
          <div>
            <div>
              <label class="main-title">BTC WITHDRAW</label>
            </div>
            <div>
              <label class="sub-title">
                Please fill in the address and amount, then submit the form. It will be confirmed in 10 minutes
              </label>
            </div>
            <div class="custom-form1 no-margin">
              <form class="withdraw-form">
                <div class="form-group">
                  <label class="title-label">Label</label>
                  <label class="title-button-label" onclick="openmanage_dialog();"><i class="fa fa-cog"></i>Manage address</label>
                  <select class="form-control" id="withdraw_label">
                  </select>
                </div>
                <div class="form-group">
                  <label class="title-label">Amount</label>
                  <label class="title-button-label" onClick="withdrawAll()"><i class="fa fa-rocket"></i>Withdraw all</label>
                  <input class="numeric decimal required form-control" id="withdraw_sum" min="0.001" name="withdraw[sum]" placeholder="At least 0.001" step="any" type="number" >
                </div>
                <div class="form-group">
                  <label class="title-label">SMS Verification Messages<a><i class="fa fa-retweet"></i> </a></label>
                  <label class="title-button-label" onClick="window.location.href='/fees'"><i class="fa fa-exclamation-circle"></i>About Fee</label>
                  <div class="full-width-class" style="display: table;width: 100%;">
                    <input class="two_factor_auth_type" name="two_factor[type]" type="hidden" value="sms" />
                    <input id="two_factor_otp" name="two_factor[otp]" placeholder='6-digit password' style="display: table-cell;" />
                    <div class="send-code-button">
                      <button class="btn btn-primary send-code-btn" name="commit" type="button" onClick="sendSMSRequest()">Send Code</button>
                    </div>
                </div>
              </div>

                <p>
                  We'll send a text message to you phone with verify code.
                </p>
                <button type="button" class="btn btn-block" onClick="withdrawSubmit()">Submit</button>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <!-- END WITHDRAW DIALOG -->

  <!-- BEGIN MANAGE ADDRESS DIALOG -->
  <div class="modal fade in hide" id="manage_dialog" role="dialog" style="display: block;">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i
    class="fa fa-close"></i></span></button>

    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-body" style="padding-bottom: 0px;">
          <div class="modal-mark">
            <div class="modal-mark-outer-border">
              <i class="fa fa-cog"></i>
            </div>
          </div>
          <div>
            <div>
              <label class="main-title">MANAGE ADDRESS</label>
            </div>
            <div>
              <label class="sub-title">To facilitate the choice of coin withdrawals address or creat new one</label>
            </div>
            <div class="custom-form1">
              <form class="form-horizontal">
                <div id="coin_addr_list" style="max-height: 120px;overflow: auto;">

                </div>
                <div class="form-group manage-address-bottom-block">
                  <div class="clearfix margin-bottom-10">
                    <input type="text" class="form-control leftinput" id="new_extra" placeholder="Enter new label">
                    <input type="text" class="form-control rightinput" id="new_uid" placeholder="Enter new address">
                  </div>

                  <div>
                    <button type="button" class="btn btn-block" onClick="addItem()">ADD LABEL</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <!-- END MANAGE ADDRESS DIALOG -->

  <div class="modal-backdrop fade in hide" id="modal_backdrop"></div>
  <% end %>
  <%= javascript_include_tag 'market_mobile' %>

  <%= javascript_include_tag 'mobile/common/common-functions' %>
  <%= javascript_include_tag 'mobile/common/menu' %>
  <%= javascript_include_tag 'mobile/common/common' %>
  <%= javascript_include_tag 'mobile/pages/market' %>
</div>
<!-- END BODY -->

</body>
</html>